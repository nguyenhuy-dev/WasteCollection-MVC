<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WasteCollection.MVCWebApp.HuyNQ</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WasteCollection.MVCWebApp.HuyNQ.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm py-3">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    WasteCollection.MVCWebApp.HuyNQ
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link nav-hover px-3" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-hover px-3" asp-controller="CollectorAssignmentsHuyNqs" asp-action="Index">
                                Collector Assignments
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-hover px-3" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>

                        <!-- LOGIN BUTTON -->
                        @if (User.Identity != null && !User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ms-3">
                                <a asp-controller="Auth"
                                   asp-action="Login"
                                   class="btn px-4 py-1 fw-semibold"
                                   style="background:linear-gradient(135deg,#1b8a4f,#37b26c); color:white; border-radius:50px;">
                                    Login
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- LOGOUT BUTTON -->
                            <li class="nav-item ms-3">
                                <form asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit"
                                            class="btn px-4 py-1 fw-semibold"
                                            style="background:white; color:#1b8a4f; border:2px solid #37b26c; border-radius:50px;">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <style>
        /* Hover effect */
        .nav-hover {
            position: relative;
            color: #333 !important;
            font-weight: 500;
            transition: color .25s ease-in-out;
        }

            /* After line animation */
            .nav-hover::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -3px;
                width: 0%;
                height: 2px;
                background-color: #37b26c; /* xanh mint đậm */
                transition: width .25s ease-in-out;
            }

            /* On hover */
            .nav-hover:hover {
                color: #1b8a4f !important; /* xanh mint nhạt */
            }

                .nav-hover:hover::after {
                    width: 100%;
                }

            /* Active page can have full underline */
            .nav-hover.active::after {
                width: 100%;
            }
    </style>

    <style>
        .btn:hover {
            filter: brightness(1.1);
            transform: translateY(-2px);
            transition: .2s ease;
        }
    </style>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white mt-5 py-5"
            style="background: radial-gradient(circle at top left, #1b5e20, #0f3d1d 60%);">

        <div class="container">

            <!-- Top content -->
            <div class="row justify-content-between align-items-start">

                <!-- Branding -->
                <div class="col-md-4 mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <img src="https://cdn-icons-png.flaticon.com/512/2903/2903143.png"
                             width="36" height="36" class="me-2" />
                        <h5 class="fw-bold mb-0">Waste Collection Platform</h5>
                    </div>

                    <p class="text-white-50 mb-1">
                        A digital platform for efficient waste collection, sorting, and recycling.
                    </p>
                    <p class="text-white-50 small">
                        Helping Vietnam move toward a cleaner, greener environment.
                    </p>
                </div>

                <!-- Quick links -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-semibold">Quick Links</h6>
                    <ul class="list-unstyled mt-2">
                        <li><a class="footer-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="footer-link" asp-controller="CollectorAssignmentsHuyNqs" asp-action="Index">Assignments</a></li>
                        <li><a class="footer-link" asp-controller="Recycling" asp-action="Guide">Recycling Guide</a></li>
                        <li><a class="footer-link" asp-controller="Community" asp-action="Index">Community</a></li>
                        <li><a class="footer-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-semibold">Contact</h6>
                    <p class="text-white-50 mb-1">📍 Ho Chi Minh City, Vietnam</p>
                    <p class="text-white-50 mb-1">📧 support@wastecollection.vn</p>
                    <p class="text-white-50 mb-0">📞 +84 987 654 321</p>
                </div>

            </div>

            <!-- Divider -->
            <hr class="border-light opacity-25" />

            <!-- Bottom -->
            <div class="text-center text-white-50 small mt-3">
                © 2026 WasteCollection.MVCWebApp.HuyNQ — All rights reserved.
            </div>

        </div>
    </footer>

    <style>
        .footer-link {
            color: rgba(255, 255, 255, 0.6);
            text-decoration: none;
            display: inline-block;
            padding: 3px 0;
            transition: 0.25s ease;
        }

            .footer-link:hover {
                color: #a8f4c6 !important;
                transform: translateX(3px);
            }
    </style>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
