@model WasteCollection.Entities.HuyNQ.Models.CollectorAssignmentsHuyNq

@{
    ViewData["Title"] = "Edit";
}

@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-10">
    <div class="w-full max-w-2xl bg-white shadow-lg rounded-xl p-8 border border-green-200">

        <h1 class="text-3xl font-bold text-green-700 mb-2">Edit Assignment</h1>
        <p class="text-gray-600 mb-6">Update the information below</p>

        <form asp-action="Edit" class="space-y-5">
            <input type="hidden" asp-for="AssignmentId" />

            <!-- Report -->
            <div>
                <label asp-for="ReportHuyNqid" class="block font-medium text-gray-700">Report Address</label>
                <select asp-for="ReportHuyNqid" asp-items="ViewBag.ReportHuyNqid"
                        class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-green-500 focus:border-green-500">
                </select>
                <span asp-validation-for="ReportHuyNqid" class="text-red-500 text-sm"></span>
            </div>

            <!-- Status -->
            <div>
                <label asp-for="Status" class="block font-medium text-gray-700"></label>
                <input asp-for="Status"
                       class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
            </div>

            <!-- ArrivalTime -->
            <div>
                <label asp-for="ArrivalTime" class="block font-medium text-gray-700"></label>
                <input asp-for="ArrivalTime"
                       class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="ArrivalTime" class="text-red-500 text-sm"></span>
            </div>

            <!-- CompletionTime -->
            <div>
                <label asp-for="CompletionTime" class="block font-medium text-gray-700"></label>
                <input asp-for="CompletionTime"
                       class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="CompletionTime" class="text-red-500 text-sm"></span>
            </div>

            <!-- CollectedWeight -->
            <div>
                <label asp-for="CollectedWeight" class="block font-medium text-gray-700"></label>
                <!-- Wrapper input + suffix -->
                <div class="mt-1 w-full border rounded-lg px-3 py-2 flex items-center focus-within:ring-2 focus-within:ring-blue-400 bg-white">
                    <input asp-for="CollectedWeight" type="number" class="flex-1 focus:outline-none" step="0.1" />
                    <span class="text-gray-400 ml-2 select-none">kg</span>
                </div>
                <span asp-validation-for="CollectedWeight" class="text-red-600 text-sm"></span>
            </div>

            <!-- ProofImageUrl -->
            <div>
                <label asp-for="ProofImageUrl" class="block font-medium text-gray-700"></label>
                <input asp-for="ProofImageUrl"
                       class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="ProofImageUrl" class="text-red-500 text-sm"></span>
            </div>

            <!-- EstimatedArrivalTime -->
            <div>
                <label asp-for="EstimatedArrivalTime" class="block font-medium text-gray-700"></label>
                <input asp-for="EstimatedArrivalTime"
                       class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="EstimatedArrivalTime" class="text-red-500 text-sm"></span>
            </div>

            <!-- Notes -->
            <div>
                <label asp-for="Notes" class="block font-medium text-gray-700"></label>
                <input asp-for="Notes"
                       class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
            </div>

            <!-- Buttons -->
            <div class="flex justify-between pt-4">
                <a asp-action="Index"
                   class="px-6 py-3 bg-gray-200 rounded-lg hover:bg-gray-300 text-lg transition">
                    Back to List
                </a>

                <button type="submit"
                        class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
