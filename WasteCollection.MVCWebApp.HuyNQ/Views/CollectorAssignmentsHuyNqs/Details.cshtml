@model WasteCollection.Entities.HuyNQ.Models.CollectorAssignmentsHuyNq

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-3xl font-bold mb-8 flex items-center gap-3">
    Assignment Details
    <span class="w-14 h-1 bg-green-500 rounded"></span>
</h1>

<div class="bg-white shadow-lg rounded-2xl p-10 border border-green-200">

    <h2 class="text-2xl font-semibold text-green-600 mb-6">Collector Assignment</h2>

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Assigned Date</dt>
            <dd class="mt-2 text-gray-900 text-lg">@Html.DisplayFor(model => model.AssignedDate)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Status</dt>
            <dd class="mt-2 text-gray-900 text-lg">@Html.DisplayFor(model => model.Status)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Arrival Time</dt>
            <dd class="mt-2 text-gray-900 text-lg">@Html.DisplayFor(model => model.ArrivalTime)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Completion Time</dt>
            <dd class="mt-2 text-gray-900 text-lg">@Html.DisplayFor(model => model.CompletionTime)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Collected Weight (kg)</dt>
            <dd class="mt-2 text-gray-900 text-lg">@Html.DisplayFor(model => model.CollectedWeight)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Proof Image</dt>
            <dd class="mt-2 text-gray-900 text-lg break-words">@Html.DisplayFor(model => model.ProofImageUrl)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Estimated Arrival</dt>
            <dd class="mt-2 text-gray-900 text-lg">@Html.DisplayFor(model => model.EstimatedArrivalTime)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Notes</dt>
            <dd class="mt-2 text-gray-900 text-lg">@Html.DisplayFor(model => model.Notes)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3 text-lg">Report Address</dt>
            <dd class="mt-2 text-gray-900 text-lg">@Html.DisplayFor(model => model.ReportHuyNq.Address)</dd>
        </div>

    </dl>
</div>

<div class="mt-10 flex gap-6">
    <a asp-action="Index"
       class="px-6 py-3 bg-gray-200 rounded-lg hover:bg-gray-300 text-lg transition">
        Back to List
    </a>

    <a asp-action="Edit"
       asp-route-id="@Model?.AssignmentId"
       class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 text-lg transition">
        Edit
    </a>
</div>
