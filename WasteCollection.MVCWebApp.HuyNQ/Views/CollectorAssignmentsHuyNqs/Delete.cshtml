@model WasteCollection.Entities.HuyNQ.Models.CollectorAssignmentsHuyNq

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
}

<h1 class="text-3xl font-bold mb-8 flex items-center gap-3">
    Delete Assignment
    <span class="w-14 h-1 bg-green-500 rounded"></span>
</h1>

<!-- Warning Box -->
<div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-5 rounded-lg mb-8">
    <h3 class="text-xl font-semibold">Are you sure you want to delete this assignment?</h3>
    <p class="text-red-600 mt-1">This action cannot be undone.</p>
</div>

<!-- Main Card -->
<div class="bg-white shadow-lg rounded-2xl p-10 border border-green-200">

    <h2 class="text-2xl font-semibold text-green-600 mb-6">Assignment Details</h2>

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-6">

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Assigned Date</dt>
            <dd class="mt-2 text-gray-900">@Html.DisplayFor(m => m.AssignedDate)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Status</dt>
            <dd class="mt-2 text-gray-900">@Html.DisplayFor(m => m.Status)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Arrival Time</dt>
            <dd class="mt-2 text-gray-900">@Html.DisplayFor(m => m.ArrivalTime)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Completion Time</dt>
            <dd class="mt-2 text-gray-900">@Html.DisplayFor(m => m.CompletionTime)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Collected Weight (kg)</dt>
            <dd class="mt-2 text-gray-900">@Html.DisplayFor(m => m.CollectedWeight)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Proof Image</dt>
            <dd class="mt-2 text-gray-900 break-words">@Html.DisplayFor(m => m.ProofImageUrl)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Estimated Arrival</dt>
            <dd class="mt-2 text-gray-900">@Html.DisplayFor(m => m.EstimatedArrivalTime)</dd>
        </div>

        <div>
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Notes</dt>
            <dd class="mt-2 text-gray-900">@Html.DisplayFor(m => m.Notes)</dd>
        </div>

        <div class="md:col-span-2">
            <dt class="text-gray-700 font-semibold border-l-4 border-green-500 pl-3">Report Address</dt>
            <dd class="mt-2 text-gray-900">@Html.DisplayFor(m => m.ReportHuyNq.Address)</dd>
        </div>

    </dl>
</div>

<!-- Action Buttons -->
<form asp-action="Delete" class="mt-10 flex items-center gap-6">
    <input type="hidden" asp-for="AssignmentId" />

    <button type="submit"
            class="px-6 py-3 bg-red-600 text-white rounded-lg text-lg hover:bg-red-700 transition">
        Confirm Delete
    </button>

    <a asp-action="Index"
       class="px-6 py-3 bg-gray-200 rounded-lg text-lg hover:bg-gray-300 transition">
        Cancel
    </a>
</form>
