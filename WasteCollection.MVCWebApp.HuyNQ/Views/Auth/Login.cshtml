@model WasteCollection.Services.HuyNQ.DTOs.LoginRequest

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 to-blue-300">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md">
        <h2 class="text-2xl font-bold text-center mb-6 text-blue-600">Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="bg-red-100 text-red-700 p-3 rounded mb-4">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post" class="space-y-4">
            <div>
                <label class="block font-semibold mb-1">Email</label>
                <input asp-for="Email"
                       class="w-full border rounded p-2 focus:ring-2 focus:ring-blue-400" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block font-semibold mb-1">Password</label>
                <input asp-for="Password" type="password"
                       class="w-full border rounded p-2 focus:ring-2 focus:ring-blue-400" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition">
                Login
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
